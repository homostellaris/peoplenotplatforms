  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "attach to server",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "dev server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start:dev"],
      "port": 9229,
      "cwd": "${workspaceFolder}/people"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "dev client",
      "url": "http://localhost:4001/person/create?name=Siob",
      "webRoot": "${workspaceFolder}/client/src"
    }
  ]
}
