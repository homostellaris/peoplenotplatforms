{
  "name": "@peoplenotplatforms/root",
  "version": "0.1.0",
  "private": true,
  "description": "Follow people, not platforms.",
  "workspaces": [
    "client/",
    "database/",
    "people/"
  ],
  "keywords": [
    "follow",
    "oauth",
    "api",
    "twitter",
    "youtube",
    "facebook"
  ],
  "homepage": "https://github.com/moderatemisbehaviour/peoplenotplatforms/",
  "bugs": {
    "url": "https://github.com/moderatemisbehaviour/peoplenotplatforms/issues"
  },
  "license": "UNLICENSED",
  "author": {
    "name": "Daniel Metcalfe",
    "email": "mrdanielmetcalfe@gmail.com",
    "url": "http://danielmetcalfe.rocks/"
  },
  "scripts": {
    "build": "cd client && npm run build",
    "create-people": "./habitat.sh node cypress/plugins/fixtureCreator.js createPeople",
    "start": "cd people && npm start",
    "lint": "eslint client/src people/src database/src",
    "test": "./habitat.sh cypress run --config baseUrl=http://localhost:4000",
    "test:dev": "./habitat.sh cypress open",
    "jest": "(cd database && npm test) && (cd people && npm test) && (cd client && npm test)",
    "ci": "(npm run build) && (npm run lint) && (CI=true npm run jest) && (CI=true start-server-and-test heroku-like http://localhost:4000)",
    "heroku-like": "heroku local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moderatemisbehaviour/peoplenotplatforms.git"
  },
  "devDependencies": {
    "cypress": "^3.4.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-cypress": "^2.1.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "prettier": "1.18.2",
    "start-server-and-test": "^1.7.11"
  }
}
