{
  "name": "follow",
  "version": "0.1.0",
  "description": "Follow people, not platforms.",
  "keywords": [
    "follow",
    "oauth",
    "api",
    "twitter",
    "youtube",
    "facebook"
  ],
  "homepage": "https://github.com/moderatemisbehaviour/follow/",
  "bugs": {
    "url": "https://github.com/moderatemisbehaviour/follow/issues"
  },
  "license": "UNLICENSED",
  "author": {
    "name": "Daniel Metcalfe",
    "email": "mrdanielmetcalfe@gmail.com",
    "url": "http://danielmetcalfe.rocks/"
  },
  "scripts": {
    "postinstall": "(cd people && npm install) && (cd database && npm install) && (cd client && npm install)",
    "build": "cd client && ../habitat.sh -f ../.env npm run build",
    "dev": "concurrently 'npm run start:dev' 'npm run test:dev'",
    "reset-database": "cd database && npm run reset-database",
    "create-people": "./habitat.sh -f .env node cypress/plugins/fixtureCreator.js createPeople",
    "start": "cd people && npm start",
    "start:dev": "concurrently \"cd people && npm run start:dev\" \"cd client && npm start\"",
    "lint": "eslint client/src people/src database/src",
    "test": "npm run cypress:run",
    "test:dev": "npm run cypress:open",
    "jest": "(cd database && npm test) && (cd people && npm test) && (cd client && npm test)",
    "ci": "start-server-and-test heroku-like http://localhost:4000",
    "heroku-like": "heroku local",
    "cypress:open": "./habitat.sh cypress open",
    "cypress:run": "./habitat.sh -f .env cypress run --config baseUrl=http://localhost:4000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moderatemisbehaviour/follow.git"
  },
  "devDependencies": {
    "concurrently": "^3.6.0",
    "cypress": "^3.4.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-cypress": "^2.1.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "prettier": "1.18.2",
    "start-server-and-test": "^1.7.11"
  },
  "dependencies": {}
}
